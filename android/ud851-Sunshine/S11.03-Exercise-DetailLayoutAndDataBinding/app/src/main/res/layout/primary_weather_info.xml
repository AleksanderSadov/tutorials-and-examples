<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_weather_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            tools:text="Tomorrow, December 10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/weather_icon"
            tools:src="@drawable/art_clouds"
            app:layout_constraintTop_toBottomOf="@+id/tv_weather_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_weather_max" />
        <TextView
            android:id="@+id/tv_weather_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            tools:text="-10\u2103"
            app:layout_constraintTop_toTopOf="@+id/iv_weather_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_weather_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_weather_icon"/>
        <TextView
            android:id="@+id/tv_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            tools:text="Light Snow"
            app:layout_constraintTop_toBottomOf="@+id/iv_weather_icon"
            app:layout_constraintLeft_toLeftOf="@+id/iv_weather_icon"
            app:layout_constraintRight_toRightOf="@+id/iv_weather_icon"/>
        <TextView
            android:id="@+id/tv_weather_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            tools:text="-2\u2103"
            app:layout_constraintTop_toTopOf="@+id/tv_weather_description"
            app:layout_constraintBottom_toBottomOf="@+id/tv_weather_description"
            app:layout_constraintRight_toRightOf="@+id/tv_weather_max"
            app:layout_constraintLeft_toLeftOf="@id/tv_weather_max"/>
    </android.support.constraint.ConstraintLayout>
</layout>
